<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/ll_login_bg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/back"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_login_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opaque_deep"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/twentyfour">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/forty_dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="@string/yummy_wheels_n_manager"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/whitie"
                android:textStyle="bold"
                 />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/four_dp"
            android:textColorHint="@color/splash"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email id"
                android:inputType="textPersonName"
                android:textColor="@color/whitie" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/four_dp"
            android:textColorHint="@color/splash"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pass_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingRight="@dimen/four_dp"
                android:textColor="@color/whitie"
                android:textColorHint="@color/splash" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/frame_border_red"
            android:text="login"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</FrameLayout>