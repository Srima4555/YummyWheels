<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/eight_dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/whitie"
        app:cardCornerRadius="@dimen/twodp"
        app:cardElevation="@dimen/four_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/eight_dp">

            <TextView
                android:id="@+id/tv_oid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:padding="@dimen/four_dp"
                android:text="@string/order_id"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_from_restau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_oid"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:paddingTop="@dimen/eight_dp"
                android:text="Restaurant:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_tot_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_oid"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:paddingTop="@dimen/eight_dp"
                android:paddingRight="@dimen/eight_dp"
                android:text="@string/total_price"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_from_restau"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:paddingTop="@dimen/eight_dp"
                android:text="@string/ordered_on"

                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_status_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_datetime"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/raleway"
                android:paddingTop="@dimen/eight_dp"
                android:text="@string/order_status"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>