<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/four_dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="2dp"
        app:cardCornerRadius="@dimen/twodp"
        app:cardElevation="@dimen/four_dp">
        <!--//Fid,Name,Cat,Desc,Price,Status,img-->
        <RelativeLayout
            android:id="@+id/rl_food"
            android:padding="@dimen/four_dp"
            android:background="@drawable/frame_border_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/four_dp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                style="@style/TextCustom"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="name" />

            <TextView
                android:id="@+id/tv_city_r"
                android:layout_below="@id/tv_rname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                style="@style/TextCustom"
                android:text="descrip" />

            <TextView
                android:id="@+id/tv_type_r"
                android:layout_below="@id/tv_city_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextCustom"
                android:text="Veg" />
            <TextView
                android:id="@+id/tv_dot"
                android:layout_below="@id/tv_city_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="cursive"
                style="@style/TextCustom"
                android:layout_alignBaseline="@id/tv_type_r"
                android:layout_toRightOf="@id/tv_type_r"
                android:text="." />

            <TextView
                android:id="@+id/tv_status_r"
                android:layout_below="@id/tv_city_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextCustom"
                android:layout_alignBaseline="@id/tv_type_r"
                android:layout_toRightOf="@id/tv_dot"
                android:text="open" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>